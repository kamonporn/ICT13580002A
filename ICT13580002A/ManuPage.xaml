<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="ICT13580002A.ManuPage"
    Title="Menu"
    Icon="ham"> 

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="200" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <BoxView
            Color="#FF9797" />
        <StackLayout
            Orientation="Vertical"
            VerticalOptions="End"
            Margin="10">
            <Image
                Source="uu.jpg"
                WidthRequest="50"
                HorizontalOptions="Start"
                BackgroundColor="Silver" />
            <Label
                Text="Minny"
                TextColor="Black"
                FontAttributes="Bold" />
            <Label
                Text="Kamonporn Paiboon"
                TextColor="Black"
                FontAttributes="Bold" />
        </StackLayout>
        <BoxView
            Grid.Row="1"
            Color="#FFDDDD" />
        <ScrollView
            Grid.Row="1">
            <StackLayout
                Orientation="Vertical"
                Padding="20">
                <Label
                    Text="View"
                    TextColor="White"
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold" />
                <Button
                    x:Name="viewButton"
                    Text="All Views"
                    BackgroundColor="#FDB4BF" />
                <BoxView
                    Color="White"
                    HeightRequest="3"
                    Margin="10" />
                <Label
                    Text="Layout"
                    TextColor="White"
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold" />
                <Button
                    x:Name="stackButton"
                    Text="Stack Page"
                    BackgroundColor="#FDB4BF" />
                <Button
                    x:Name="gridButton"
                    Text="Grid Layout"
                    BackgroundColor="#FDB4BF" />
                <Button
                    x:Name="absoluteButton"
                    Text="Absolute Layout"
                    BackgroundColor="#FDB4BF" />
                <BoxView
                    Color="White"
                    HeightRequest="3"
                    Margin="10" />
                <Label
                    Text="Layout"
                    TextColor="White"
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold" />
                <Button
                    x:Name="contentButton"
                    Text="Content Page"
                    BackgroundColor="#FDB4BF" />
                <Button
                    x:Name="navButton"
                    Text="Navigation Page"
                    BackgroundColor="#FDB4BF" />
                <Button
                    x:Name="tabButton"
                    Text="Tabbed Page"
                    BackgroundColor="#FDB4BF" />
                <Button
                    x:Name="carouselButton"
                    Text="Carousel Page"
                    BackgroundColor="#FDB4BF" />
            </StackLayout>
        </ScrollView>
    </Grid>
    
</ContentPage>
