<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="ICT13580002A.GridPage">

    <Grid
        BackgroundColor="#B9E3AE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="100" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="100" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Button
            Text="Button"
            BackgroundColor="#BACAB3"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2" />
        <Button
            Text="Button"
            BackgroundColor="#F4EFAF"
            Grid.Row="1"
            Grid.Column="1"
            Grid.RowSpan="2" />
        <Button
            Text="Button"
            BackgroundColor="#FDB4BF"
            Grid.Row="2"
            Grid.Column="2" />
    </Grid>
</ContentPage>
